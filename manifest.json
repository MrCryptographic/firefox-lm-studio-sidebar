{
  "manifest_version": 3,
  "name": "LM Studio Sidebar",
  "version": "1.5",
  "description": "A simple sidebar chat interface for a local LM Studio server.",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "Toggle LM Studio Sidebar"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "lm-studio-sidebar@your-email.com",
      "strict_min_version": "109.0",

      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}